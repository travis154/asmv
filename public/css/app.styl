	position: relative
	padding-bottom: 44.25%
	padding-top: 30px
	height: 0
	overflow: hidden
	iframe
	object
	embed
		position: absolute
		top: 0
		left: 0
		width: 100%
		height: 100%
nav
	margin-top: 3em;
.navbar-default
	.navbar-nav
		>li
			&:hover
				background main-color
				>a
					color white
					
