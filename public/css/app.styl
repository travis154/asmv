		color white

#quickcontact
	>span
		trans(padding .21s ease-in, background .21s ease-in)
		background transparent
		display inline-block
		margin-right 10px
		>span
			&:first-child
				color #00e0ff
#quickcontact.active
	>span
		background #00e0ff
		padding 20px
		font-weight 400	
		>span
			&:first-child
				color white
.white
	color #f0f0f0
.carousel-mover
	color black
	cursor pointer
	margin-bottom: 7px;
	border: solid 1px #c0c0c0;
	height 140px
	padding-left: 10px;
	-webkit-filter: grayscale(1);
	-moz-filter: grayscale(1);
	filter grayscale(1);
	h4
		color white
		text-shadow 1px 1px rgba(1,1,1,.3)
	.col-md-4
		padding-left 0px
	&:hover
		h4
			color main-color

.carousel-mover.active
	-webkit-filter: grayscale(0) !important;
	-moz-filter: grayscale(0) !important;
	filter grayscale(0) !important;
	background #f0f0f0
	color #666
	h4
		color white
		font-weight bold
		
	&:hover
		h4
			color white

.affix-item
	>img
		margin-bottom 10px
.members
	img
		margin-right 5px
		margin-bottom 5px
.people-selection
	label
		font-family "Open Sans"
		font-weight 800
		padding 0px 12px
		text-align: center;
	.active
		.arrow-down
			border-top: 10px solid #F341C1;
.center
	text-align: center;

hr
	margin-top: 0;
	margin-bottom: 0;
	border: 0;
	border-top: 2px solid #F341C1;
.arrow-down
	margin: 0px auto;
	width: 0; 
	height: 0; 
	border-left: 10px solid transparent;
	border-right: 10px solid transparent;
	border-top: 10px solid transparent;
.person-card
	cursor pointer
	position relative
	overflow hidden
	height: 120px;
	margin-bottom: 20px;
	h6
		text-shadow 1px 1px 1px rgba(255,255,255,.2)
	h2
		// font-size 23px
		// color white
		// text-shadow 1px 1px 1px rgba(0,0,0,1)
		font-size: 17px;
		color: #3D3A3A;
		font-weight: 600;
		padding: 9px;
	img
		box-shadow 0px 0px 13px white
	.person-card-cover
		trans(-webkit-filter .2s linear)
		background #f0f0f0
		background-size:cover !important;
		position:absolute;
		width:100%;
		height:100%;
		-webkit-filter: grayscale(0.8);
	&:hover
		h2
			//text-shadow 1px 1px 1px #000, 0px 0px 17px #fff, 0px 0px 17px #fff, 0px 0px 17px #555
		.person-card-cover
			-webkit-filter: grayscale(0);
.person-new-card
	cursor pointer
	img
		width 48px
	h5
		color #737373
		margin: 0
		padding: 6px 0px 0px
	h6
		margin: 0
		color #737373
		padding: 5px 0 0;
		text-transform: uppercase;
	.twitter-name
		strong
			color #c22273
			font-size: 13px;
			font-weight: 300
