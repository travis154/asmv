.popover
	border-radius 0
	margin-top: -1px !important;
	max-width: 280px;
.popover.bottom
	.arrow
		left: 10%;
#social
	position: absolute;
	right: 0;
	bottom: 5px;
	a
		font-size: 23px;
		color white
		text-shadow: 1px 1px 4px rgba(0,0,0,.5);
		width: 32px;
		text-decoration none
		&:hover
			color #ef2c8d
			text-shadow: 1px 1px 4px rgba(255,255,255,.5);
.profile-bar
	background #ef2c8d
	padding: 5px;
	a
		font-size: 23px;
		color white
		width: 32px;
		text-decoration none
		&:hover
			text-shadow: 1px 1px 4px rgba(0,0,0,.5);
